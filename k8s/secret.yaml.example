apiVersion: v1
kind: Secret
metadata:
  name: podscope-secrets
  namespace: podscope
type: Opaque
stringData:
  # Grafana API Key (if using Grafana API integration)
  # Uncomment and set your actual API key
  # GRAFANA_API_KEY: "your-grafana-api-key-here"

  # Redis password (if your Redis instance requires authentication)
  # If using password, update REDIS_INSTANCES in configmap to include it
  # REDIS_PASSWORD: "your-redis-password-here"

  # Any other secrets your application needs
  # Add them here following the same format
